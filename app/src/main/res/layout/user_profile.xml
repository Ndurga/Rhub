<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center"
        android:textSize="30sp"
        android:id="@+id/user_id"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetCustomers List"
            android:id="@+id/customers_list"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter customer phone number"
            android:id="@+id/customer_id"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetCustomer Information"
            android:id="@+id/customer_info"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GetCustomer Status"
            android:id="@+id/customer_status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:id="@+id/result_id"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_circular_button"
        android:layout_gravity="end"
        app:elevation="10dp"
        app:pressedTranslationZ="12dp"
        android:clickable="true"
        android:id="@+id/add_user"
        />

</LinearLayout>